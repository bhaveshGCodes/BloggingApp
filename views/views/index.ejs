<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Bootstrap Link (Dn) only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- <style>
       
    </style> -->

    <!-- <link rel="stylesheet" href="styles.css"> -->
    <title> Blog App</title>

    <style type="text/css">
        .parent {
            display: flex;
            flex-direction: column;
            /* border: 2px solid red; */
            min-height: 100vh;
        }

        .child[data-order='3'] {
            /*  flex dosent have justify-self, so we can use margin instead to put it at the bottom  */
            margin-top: auto;
        }

        button {
            padding: 15px;
            text-align: center;
        }

        a:link {
            text-decoration: none;
        }
    </style>

</head>

<body>
    <div class="parent">
        <nav class="navbar navbar-dark bg-dark text-light mb-4">
            <div class="container">

                <h1>Blog Articles</h1>
                <button class="rounded-pill"><a class="text-dark" href="./features">Upcoming Features</a></button>
            </div>
        </nav>

        <div class="container">

            <a class="btn btn-success" href="/new">New Article</a>

            <% articles.forEach(article=>{ %>

                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= article.title %>
                        </h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.createdAt %>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description %>
                        </div>
                        <div class="mt-3  ">
                            <form action="http://localhost:2004/?a=DELETE&id=<%=article._id %>" method="POST">


                                <% let cardID=article._id%>


                                    <a href="/article?v=<%=cardID %>" class="btn btn-primary">Read More</a>

                                    <a href="/edit?id=<%=article._id %>" class="btn btn-secondary"> EDIT</a>

                                    <button class="btn btn-danger float-end"> <i
                                            class="fa-sharp fa-solid fa-trash-can "></i></button>

                            </form>

                        </div>

                    </div>

                </div>

                <%}) %>


        </div>

        <%- include('_footer.ejs') %>

    </div>
    <script src="https://kit.fontawesome.com/4e04cbed2b.js" crossorigin="anonymous"></script>
</body>

</html>